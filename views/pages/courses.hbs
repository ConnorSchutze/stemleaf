<h2>Read Courses</h2>
<table id="courses_table">

    <thead>

        <tr id="headerRow">
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
        </tr>
    </thead>

    <tbody>
        {{#each data}}
        <tr data-value={{this.id}}>
            <td class="data">{{this.id}}</td>
            <td class="data">{{this.name}}</td>
            <td class="data">{{this.subject}}</td>
            <td class="data">{{this.description}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Search Courses</h2>
<p>Search by subject using the field below. Partial names are OK too!</p>
<form id="search_courses" method='GET' action='/courses/'>
    <label for="input_courses_search">Search by Subject: </label>
    <input type="text" name="subject" id="input_courses_search">
    
    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>

<h2>Add Courses</h2>
<p>To add a new Course, please enter their information below and click 'Submit'!</p>
<form id="add_courses_form">
    <label for="input_courses_name">Course Name: </label>
    <input type="text" name="input_name" id="input_courses_name_add">

    <label for="input_courses_subject">Subject: </label>
    <input type="text" name="input_subject" id="input_courses_subject_add">

    <label for="input_courses_description">Description: </label>
    <input type="text" name="input_description" id="input_courses_description_add">

    <input type="submit">
</form>

<script src="/js/courses/add_course.js"></script>
